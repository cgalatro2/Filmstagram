<% include ../partials/header %>

    <% if (movies['Search'] == undefined) { %>
      <div id='no-results-container' class='container'>
        <div class="d-flex justify-content-center">
          <div class='card'>
            <div class="card-body">
      				<p class="card-text text-dark">
                Sorry, there aren't any movies or TV series that match your search.
              </p>
              <div class='d-flex justify-content-center'>
                <a class='btn btn-outline-primary' href='/movies'>Home<a>
              </div>
            </div
          </div>
        </div>
      </div>
    <% } else { %>

      <div class="text-center mt-5">
          <h1 class="display-3">Top 10 Results</h1>
      </div>

      <div class="container">
        <div class="row text-center">
            <% movies["Search"].forEach((movie) => { %>
              <div class="col-md-3 col-sm-6 my-auto">
                <div class="card search-card">
                  <div class='card-header'><%= movie.Title %></div>
                  <div class="d-flex justify-content-center">
                    <img class="search-img" src="<%= movie.Poster %>"
                      onerror="this.src='https://images.unsplash.com/photo-1542204637-e67bc7d41e48?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=750&q=80';"
                      alt="Card image cap" style='width:100%'>
                  </div>
                  <p class='card-text'>
                    <a href="/movies/<%= movie._id %>" class="btn btn-primary">More Info</a>
                  </p>
                </div>
              </div>
            <% }); %>
        </div>
      </div>
    <% } %>

<% include ../partials/footer %>
