<% include ../partials/header %>
    <div class='container text-center'>
		<h1 style="text-align: center">Add a New Movie</h1>
		<div style="width: 30%; margin: 25px auto;">
			<form action="/movies" method="POST">
				<div class="form-group">
					<label for="title">Title</label>
					<input class="form-control" type="text" name="title" id="title" placeholder="The Godfather">
				</div>
				<div class="form-group">
					<label for="image">Image Url</label>
					<input class="form-control" type="text" name="image" id="image" placeholder="https://i.pinimg.com/originals/ea/..." required>
				</div>
				<div class="form-group">
					<label for="description">Description</label>
					<input class="form-control" type="text" name="description" id="description" placeholder="Widely regarded as one of the greatest films...">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Submit</button>
				</div>
			</form>
			<a href="/movies">Go Back</a>
		</div>
	</div>
<% include ../partials/footer %>